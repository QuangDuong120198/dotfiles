{
  "coc.source.OmniSharp.filetypes": [
    "cs",
    "cshtml"
  ],
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    },
    "pyls": {
      "command": "pyls",
      "filetypes": ["python"],
      "rootPatterns": ["*.py", "__pycache__/", "requirements.txt"]
    },
    "tex": {
      "command": "texlab",
      "filetypes": ["tex", "st"],
      "rootPatterns": [".git/"],
      "settings": {
        "latex.build.executable": "latexmk",
        "latex.build.args": [
          "-pdf",
          "-interaction=nonstopmode",
          "-recorder",
          "-file-line-error",
          "-shell-escape",
          "-halt-on-error",
          "-synctex=1",
          "-pvc",
          "%f"
        ],
        "latex.build.onSave": true,
        "latex.lint.onChange": true,
        "latex.lint.onSave": true,
        "latex.forwardSearch.executable": "evince",
        "latex.forwardSearch.args": [
          "%f"
        ]
      }
    }
  }
}
