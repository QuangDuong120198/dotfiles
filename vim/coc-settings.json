{
  "coc.preferences.formatOnSaveFiletypes": ["go", "scala"],
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", "*.c", "*.cc", "*.cpp"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", "go.sum"],
      "filetypes": ["go"]
    },
    "pyls": {
      "command": "pyls",
      "filetypes": ["python"],
      "rootPatterns": ["*.py", "__pycache__/", "requirements.txt"]
    },
    "rls": {
      "command": "rls",
      "filetypes": ["rust"],
      "rootPatterns": ["Cargo.toml", "Cargo.lock", "rustfmt.toml", "rust-toolchain", "*.rs"]
    },
    "tex": {
      "command": "texlab",
      "filetypes": ["tex", "st", "cls"],
      "rootPatterns": ["latexmkrc", ".latexmkrc", ".chktexrc", "chktexrc", "*.tex"],
      "settings": {
        "latex.build.executable": "latexmk",
        "latex.build.args": [
          "-pdf",
          "-interaction=nonstopmode",
          "-recorder",
          "-file-line-error",
          "-shell-escape",
          "-halt-on-error",
          "-synctex=1",
          "-pvc",
          "%f"
        ],
        "latex.build.onSave": true,
        "latex.lint.onChange": true,
        "latex.lint.onSave": true,
        "latex.forwardSearch.executable": "evince",
        "latex.forwardSearch.args": [
          "%f"
        ]
      }
    }
  }
}
